<%- include('../partials/header') %>

<h1>Mongoose Flights</h1>
<table>
    <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Departure Date/Time</th>
    </tr>
    <% flights.forEach((flight) => { %>
        <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><%= flight.flightNo %></td>
            <td><%= flight.departs.toISOString() %></td>
        </tr>
    <% }); %>
</table>

